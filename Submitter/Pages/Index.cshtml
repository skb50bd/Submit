@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Submit Your Assignment</h1>
    <form method="post"
          enctype="multipart/form-data">
        <div class="form-group mt-5">
            <div class="custom-file form-control form-control-sm col-md-4">
                <input type="file"
                       class="custom-file-input"
                       asp-for="Input"
                       id="file">
                <label class="custom-file-label"
                       for="file">
                    Choose file...
                </label>
            </div>
        </div>
        
        <div class="form-group">
            <input class="btn btn-primary" 
                   type="submit" 
                   value="Submit"/>
        </div>
    </form>
</div>
